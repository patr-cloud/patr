{{#> container}}
  {{#*inline "email-content"}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >We have received your payment of 
      <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars paymentAmount}}</strong>.
    </td>
  </tr>
  {{#if totalBill}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Your bill for {{stringify-month month}} {{year}} for the workspace  
      <strong
        class="txt-light"
        style="color: #ffffff"
      >${{workspaceName}}</strong> has been reduced to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars billRemaining}}</strong>.
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Total bill for {{stringify-month month}} {{year}}: $<strong
        class="txt-light"
        style="color: #ffffff"
      >{{cents-to-dollars totalBill}}</strong>
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Remaining bill after payment: $<strong
        class="txt-light"
        style="color: #ffffff"
      >{{cents-to-dollars billRemaining}}</strong>
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Total credits before payment: $<strong
        class="txt-light"
        style="color: #ffffff"
      >{{cents-to-dollars totalCredits}}</strong>
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Total credits after payment: $<strong
        class="txt-light"
        style="color: #ffffff"
      >{{cents-to-dollars creditsRemaining}}</strong>
    </td>
  </tr>
  {{/if}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >
      If you did not initiate this payment, reach out
      to us at
      <a
        href="mailto:suppport@patr.cloud"
        class="plain-link txt-primary"
        title="Contact Patr support"
        style="color: #f89b41; text-decoration: none; font-weight: 500;"
      >suppport@patr.cloud</a> immediately.
    </td>
  </tr>
  {{/inline}}
{{/container}}