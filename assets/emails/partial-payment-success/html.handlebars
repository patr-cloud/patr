{{#> container}}
  {{#*inline "email-content"}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >We have received your payment of 
      <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalPaymentAmount}}</strong>.
    </td>
  </tr>
  {{#if (greater-than totalBill totalPaymentAmount)}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Your bill for {{stringify-month month}} {{year}} for the workspace  
      <strong
        class="txt-light"
        style="color: #ffffff"
      >${{workspaceName}}</strong> amounting to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalBill}}</strong> has been reduced to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars billRemaining}}</strong>.
    </td>
  </tr>
  {{/if}}
  {{#if (less-than-or-equal-to totalBill totalPaymentAmount)}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Your bill for {{stringify-month month}} {{year}} for the workspace  
      <strong
        class="txt-light"
        style="color: #ffffff"
      >${{workspaceName}}</strong> amounting to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalBill}}</strong> has been cleared.
    </td>
  </tr>
  {{#if (less-than totalBill totalPaymentAmount)}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >The remaining amount paid of <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars balancePaymentAmount}}</strong> has been added to your workspace as credits.
    </td>
  </tr>
  {{/if}}
  {{/if}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >
      If you did not initiate this payment, reach out
      to us at
      <a
        href="mailto:suppport@patr.cloud"
        class="plain-link txt-primary"
        title="Contact Patr support"
        style="color: #f89b41; text-decoration: none; font-weight: 500;"
      >suppport@patr.cloud</a> immediately.
    </td>
  </tr>
  {{/inline}}
{{/container}}