{{#> container}}
  {{#*inline "email-content"}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >
      Your domain
      <strong
        class="txt-light"
        style="color: #ffffff"
      >{{domainName}}</strong>
      has been deleted as it was not verified for {{deadlineLimit}} days.
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >
      If you wish to verify your domain, <a
        href="https://app.patr.cloud/domain/new"
        class="plain-link txt-primary"
        style="color: #f89b41; text-decoration: none; font-weight: 500;"
      >add the domain to Patr</a> and click on the <strong
        class="txt-light"
        style="color: #ffffff"
      >VERIFY</strong> button. 
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >
      If you are facing any issues, reach out to us at
      <a
        href="mailto:suppport@patr.cloud"
        class="plain-link txt-primary"
        title="Contact Patr support"
        style="color: #f89b41; text-decoration: none; font-weight: 500;"
      >suppport@patr.cloud</a>
    </td>
  </tr>
  {{/inline}}
{{/container}}