{{#if creditsDeducted}}
  {{#if cardAmountDeducted}}
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        The amount was automatically deducted using your card and Patr credits,
        so no further action is required.
      </td>
    </tr>
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        Amount paid using card:
        <strong class="txt-light" style="color:#ffffff">${{cents-to-dollars
            cardAmountDeducted
          }}</strong>
      </td>
    </tr>
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        Amount paid using credits:
        <strong class="txt-light" style="color:#ffffff">${{cents-to-dollars
            creditsDeducted
          }}</strong>
      </td>
    </tr>
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        Credits remaining:
        <strong class="txt-light" style="color:#ffffff">${{cents-to-dollars
            creditsRemaining
          }}</strong>
      </td>
    </tr>
  {{/if}}
  {{#unless cardAmountDeducted}}
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        The amount was automatically charged from your Patr credits, so no
        action is required from your end.
      </td>
    </tr>
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        Credits consumed:
        <strong class="txt-light" style="color:#ffffff">${{cents-to-dollars
            creditsDeducted
          }}</strong>
      </td>
    </tr>
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        Credits remaining:
        <strong class="txt-light" style="color:#ffffff">${{cents-to-dollars
            creditsRemaining
          }}</strong>
      </td>
    </tr>
  {{/unless}}
{{/if}}
{{#if cardAmountDeducted}}
  {{#unless creditsDeducted}}
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        The amount was automatically charged to your card, so no action is
        required from your end.
      </td>
    </tr>
    <tr>
      <td
        class="para txt-light"
        style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
      >
        Amount paid:
        <strong class="txt-light" style="color:#ffffff">${{cents-to-dollars
            cardAmountDeducted
          }}</strong>
      </td>
    </tr>
  {{/unless}}
{{/if}}