{{#> container}}
  {{#*inline "email-content"}}
  {{#if (less-than-or-equal-to totalBill totalCredits)}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >${{cents-to-dollars creditsDeducted}}</strong> credits has been used to settle up your bill for {{stringify-month month}} {{year}} for the workspace <strong
        class="txt-light"
        style="color: #ffffff"
      >{{workspaceName}}</strong> amounting to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalBill}}</strong> 
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Remaining credits: <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars creditsRemaining}}</strong>
    </td>
  </tr>
  {{/if}}
  {{#if (greater-than totalBill totalCredits)}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >The credits available in your workspace of <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalCredits}}</strong> has been used to reduce your bill for {{stringify-month month}} {{year}} for the workspace {{workspaceName}} from <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalBill}}</strong> to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars billRemaining}}</strong>.
    </td>
  </tr>
  {{/if}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >
      If you are facing any issues, reach out
      to us at
      <a
        href="mailto:suppport@patr.cloud"
        class="plain-link txt-primary"
        title="Contact Patr support"
        style="color: #f89b41; text-decoration: none; font-weight: 500;"
      >suppport@patr.cloud</a>
    </td>
  </tr>
  {{/inline}}
{{/container}}