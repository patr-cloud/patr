{
	"dockerComposeFile": "docker-compose.yml",
	"name": "Patr API",
	"service": "app",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"settings": {
				// runs rust analyzer in different folder so that cargo build won't wait to start compiling
				"rust-analyzer.cargo.targetDir": "./.devcontainer/volume/data/rust-analyzer",
				"files.watcherExclude": {
					"**/target/**": true,
					"./devcontainer/volume/**": true
				}
			},
			"extensions": [
				"vadimcn.vscode-lldb",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"serayuzgur.crates",
				"usernamehw.errorlens",
				"eamodio.gitlens",
				"patr-cloud.patr-theme-live",
				"be5invis.toml"
			]
		}
	},
	"shutdownAction": "stopCompose",
	"forwardPorts": [
		3000,
		"jaeger:16686"
	],
	"postCreateCommand": "./.devcontainer/scripts/post-init.sh",
	"initializeCommand": "./.devcontainer/scripts/pre-init.sh",
	"remoteUser": "vscode"
}